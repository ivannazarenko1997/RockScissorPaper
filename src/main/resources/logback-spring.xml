<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false">
      <appender name="FILE" class="ch.qos.logback.core.FileAppender">

          <file>applicationLogs.log</file>
          <encoder>
              <pattern>%msg%n</pattern>
          </encoder>
      </appender>

      <root level="info">
          <appender-ref ref="FILE"/>
      </root>
</configuration>